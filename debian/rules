#!/usr/bin/make -f

%:
	dh ${@} --parallel --with python3

override_dh_auto_clean:
	dh_auto_clean
	rm -f mkv-extractor-qt5.svgz

override_dh_install:
	scour --enable-id-stripping \
		--shorten-ids \
		--enable-comment-stripping \
		--disable-embed-rasters \
		--remove-metadata \
		--indent=none \
		-i mkv-extractor-qt5.svg \
		-o mkv-extractor-qt5.svgz
	dh_install

override_dh_python3:
	dh_python3 --ignore-shebangs

override_dh_pysupport:

