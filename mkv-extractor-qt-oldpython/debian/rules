#!/usr/bin/make -f

%:
	dh ${@}

override_dh_auto_build:
	# Lancement de l'executable creant de fichiers Ã  jours
	$(CURDIR)/build.sh

override_dh_clean:
	# Nettoyage des fichiers suivants avant la creation d'un paquet source
	dh_clean
	$(CURDIR)/clean.sh

override_dh_install:
	dh_install
	# Use the copyright file from the doc directory
	sed -i 's@self.LicenceFile = "licence"@self.LicenceFile = "file:///usr/share/doc/mkv-extractor-qt/copyright"@' \
		debian/*/usr/share/mkv-extractor-qt/MKVExtractorQt.py

override_dh_builddeb:
	# Compression du dossier data du paquet debian
	dh_builddeb -- -Zxz -z9
